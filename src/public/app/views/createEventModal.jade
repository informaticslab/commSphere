div(ng-controller="createEventCtrl")
	.modal-content
		.modal-header.header_dark
			span.pull-right
				button.btn.close_button.glyphicon.glyphicon-remove(ng-click="cancel()")
			h4.modal-title(id='myModalLabel') &nbsp;Create New Event
		.modal-body
			form.form-inline
				.form-group
					label Event Name
					input.form-control(placeholder="Please enter event name" ng-model="eventName")
				.form-group
					label Event Type
					select.form-control(placeholder="Select event type" ng-model="selectEvent")			
			br
			br
			.row
				.col-lg-9.col-md-9.col-sm-9
					tabset
						tab(ng-repeat="category in document.categories" heading="{{category.displayValue}}")
							div.form-inline.pull-right
								.form-group
									label Assign To
									select.form-control(placeholder="Select Analysst" ng-model="assignedAnalyst")
							br
							br
							div(ng-repeat="topic in document.categories[category.displayValue].topics")
								.topic(ng-mouseenter="hover = true" ng-mouseleave="hover = false")
									| {{topic.displayValue | descapeDot}}
									i.fa.fa-times.fa-sm(ng-show="hover")
								br
								div(ng-repeat="subtopic in document.categories[category.displayValue].topics[topic.displayValue].subTopics")
									.subTopic
										| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{subtopic.displayValue}}
									br
								div.form-inline
									.form-group
										| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										input.eventTemplateSubTopic.form-control(type="text" ng-model="subTopicValue[category.displayValue+'-'+topic.displayValue]" placeholder="Add Sub Topic" ng-keyup="$event.keyCode == 13 ? addSubTopic(category.displayValue,topic.displayValue) : null")
										//label.btn.btn-default.btn-sm(type="button" aria-label="Left Align" ng-click="addSubTopic(category.displayValue,topic.displayValue)")
											| Add Sub Topic
								hr
							div.form-inline
								.form-group
									input.form-control(type="text" ng-model="topicValue[category.displayValue]" placeholder="Add Topic" ng-keyup="$event.keyCode == 13 ? addTopic(category.displayValue) : null")
									//label(type="button" class="btn btn-default" aria-label="Left Align" ng-click="addTopic(category.displayValue)" width="100%")
										| Add Topic
		.modal-footer
			button.btn.btn-primary(ng-click="saveEvent()") Save

							
						