div(style="background-color:#2a2d33;margin-left:-234px" ng-if="!identity.isAuthenticated()")
    .login-cont
        br
        br
        br
        br
        |             
        .login-header(align='center')
          img(src='img/comm-serve-logo-login.png', width='300', height='45')
        .login-content-cont
          .login-content(align='center')
            h4 Sign in to your account
            br
            | &#x9;&#x9;&#x9;
            button.btn.btn-success.btn-lg.login-button(type='submit' ng-click="pivLogin()") CDC Smartcard Login
            br
            br
            button.btn.btn-success.btn-lg.login-button(ng-click="usernameLogin()" ng-if='!usernameLoginShow') Login with Username/Password
            form(ng-show='usernameLoginShow')
              .form-group
                input#exampleInputEmail1.form-control.input-lg(type='text' placeholder='Email' ng-model='email')
              |   &#x9;&#x9;&#x9;
              .form-group
                input#exampleInputPassword1.form-control.input-lg(type='password' placeholder='Password' ng-model='password')
              |   
              |   &#x9;&#x9;&#x9;
              button.btn.btn-success.btn-lg.login-button(type='submit' ng-click="login(email, password)") Login
        .login-footer(align='center')
          img(src='img/cdc-logo.png')
          br
          br
          |    &#x9;
          img(src='img/iiu-logo.png')


