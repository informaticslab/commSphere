div(style="background-color:#f2f2f2;")
    .modal-content
        .modal-header.header_dark
            .row(style='background-color:#ffffff;')
                .col-lg-12
                    .create-new-event-cont
                        h2.h2-create-new(id='myModalLabel') Create New Event
                        br
                        p.p-create-new {{date | date:'medium'}}
                    .create-btn-cont
                        button.btn.btn-default.btn-success(type="button" ng-click="createEvent()")
                            | Create
                    .save-draft-cont
                        button.btn.btn-default(type="button" style='background-color:#bababa; color:#ffffff;')
                            | Save Draft
        .modal-body(style='background-color:#f2f2f2;')
            .row(style='background-color:#f2f2f2; height:100vh;')
                .col-lg-12.col-md-12.col-sm-12
                    .tab-container
                        tabset
                            tab(ng-repeat="category in eventdoc.categories" heading="{{category.name}}")
                                .row
                                    .col-lg-12
                                        div.tab-content-container
                                            ul.nav.nav-pills.nav-stacked.col-md-2(style="background-color:#f2f2f2;")
                                                li(ng-repeat="topic in category.topics" ng-class="{active:activeTab=='tab_'+$index}")
                                                    a(data-target="{{'#tab_'+$index}}" data-toggle="pill"  ng-click="setActiveTab('tab_'+$index)")
                                                        | {{topic.name}}
                                            div.tab-content.col-md-10
                                                div.tab-pane2(ng-repeat="topic in category.topics" id="{{'#tab_'+$index}}" ng-class="{active:activeTab=='tab_'+$index}")
                                                    h3
                                                        | {{topic.name}}
                                                    div(ng-repeat="subTopic in topic.subTopics")
                                                        h4
                                                            | {{subTopic.name}}
                                                        div(ui-tree='options')
                                                            ul(ui-tree-nodes='', ng-model='subTopic.bullets', data-type='bullet')
                                                                li.angular-ui-tree-handle-clear(ng-mouseenter="hover = true" ng-mouseleave="hover = false" ng-repeat='bullet in subTopic.bullets', ui-tree-node='')
                                                                    //a.btn.btn-danger.btn-xs.pull-right(ng-show="hover" href='', data-nodrag='', ng-click='removeBullet(subTopic, bullet)')
                                                                        i.glyphicon.glyphicon-remove
                                                                    p
                                                                        | {{bullet.name}}
                                                                    //ol(ui-tree-nodes='', ng-model='bullet.subBullets', data-type='subBullet')
                                                                        li(ng-repeat='subBullet in bullet.subBullets', ui-tree-node='')
                                                                            .subBullet-title.angular-ui-tree-handle(ng-mouseenter="hover = true" ng-mouseleave="hover = false")
                                                                                a.btn.btn-danger.btn-xs.pull-right(ng-show="hover" href='', data-nodrag='', ng-click='removeSubBullet(bullet, subBullet)')
                                                                                    i.glyphicon.glyphicon-remove
                                                                                div
                                                                                    i.fa.fa-caret-right
                                                                                    | &nbsp;&nbsp;{{subBullet.name}}
                                                                    input.form-control(type='text', ng-model='bullet.newSubBulletName', placeholder='SubBullet name' ng-keyup='$event.keyCode==13 ? addSubBullet(bullet) : null')
                                                                    //ol.angular-ui-tree-nodes(data-nodrag='')
                                                                        li.angular-ui-tree-node
                                                                            .subBullet-title.angular-ui-tree-handle
                                                                                form.form-inline(role='form')
                                                                                    .form-topic
                                                                                        label.sr-only(for='subBulletName') subBullet name
                                                                                    input.form-control(type='text', ng-model='bullet.newSubBulletName', placeholder='SubBullet name' ng-keyup='$event.keyCode==13 ? addSubBullet(bullet) : null')
                                                            ol.angular-ui-tree-nodes(data-nodrag='')
                                                                li.angular-ui-tree-node
                                                                    .bullet-title.angular-ui-tree-handle
                                                                        form.form-inline(role='form')
                                                                            .form-topic
                                                                                label.sr-only(for='bulletName') bullet name
                                                                                input.form-control(type='text', ng-model='subTopic.newBulletName', placeholder='Bullet name' ng-keyup='$event.keyCode==13 ? addBullet(subTopic) : null')
                                //.row
                                    .col-lg-6
                                            h3 Data binding
                                            .info
                                                | {{  }}
                                            pre.code.
                                                {{ eventdoc | json }}   

            .clear-divs


            

                            
                        