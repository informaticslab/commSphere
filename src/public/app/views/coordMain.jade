div.container
    table(class="table table-bordered table-striped")
        thead
            tr
                th
                    a(href="" ng-click="sortType = 'name'; sortReverse = !sortReverse") Event Name
                        span(ng-show="sortType == 'name' && !sortReverse" class="fa fa-caret-down")
                        span(ng-show="sortType == 'name' &&  sortReverse" class="fa fa-caret-up") 
                th
                    a(href="" ng-click="sortType = 'type'; sortReverse = !sortReverse") Event Type
                        span(ng-show="sortType == 'type' && !sortReverse" class="fa fa-caret-down")
                        span(ng-show="sortType == 'type' &&  sortReverse" class="fa fa-caret-up")  
        tbody
            tr(ng-repeat="instance in instances | orderBy:sortType:sortReverse")
                td(width=auto) {{instance.name}}
                td {{instance.type}}